{% extends 'base.html.twig' %}

{% block title %}Embauche index{% endblock %}

{% block body %}
    <h1>Embauche index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Poste</th>
                <th>Date_embauche</th>
                <th>Salaire</th>
                <th>Duree</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for embauche in embauches %}
