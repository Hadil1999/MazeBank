                <td>{{ embauche.id }}</td>
                <td>{{ embauche.poste }}</td>
                <td>{{ embauche.dateEmbauche ? embauche.dateEmbauche|date('Y-m-d') : '' }}</td>
                <td>{{ embauche.salaire }}</td>
                <td>{{ embauche.duree }}</td>
                <td>
                    <a href="{{ path('app_embauche_show', {'id': embauche.id}) }}">show</a>
                    <a href="{{ path('app_embauche_edit', {'id': embauche.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_embauche_new') }}">Create new</a>
{% endblock %}
